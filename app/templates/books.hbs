<Breadcrumb />

<h1>Books Page</h1>


<head>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<style>
.wrap{
	max-width:500px;
	margin:auto;
}
i {
 color:black;
}
.fa{
	font-size:4em;
	cursor:pointer;
	user-select:none;
	color:black;
}
.fa:hover{
	color:blue;
}
</style>
</head>
<body>
<i {{on "click" this.myFunctionOne}} id="yo" style="color:black" class="fa fa-thumbs-up"></i>
<i {{on "click" this.myFunctionTwo}} id="yo2" style="color:black" class="fa fa-thumbs-down"></i>
</body>

{{#each this.model.content as |stuff index|}}
{{stuff._record.name}}
    <LinkTo @route='book' @model={{stuff._record}}><li>Book title: {{stuff._record.name}}</li></LinkTo>
    <li>Author: {{stuff._record.authors}}</li>
    <li>Number of Pages: {{stuff._record.numberOfPages}}</li>
    <li>Book Comment: <input type="text" id="bcomment" name=index+"bcomment">
    <button type="button" {{on "click" this.save}}>Button</button> </li>
{{/each}}